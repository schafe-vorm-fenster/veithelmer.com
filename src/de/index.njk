description: Filme von Veit Helmer — Visuelle Poesie von Orten, Menschen und stillem Erzählen
locale: de
permalink: /de/
---

{% from "macros/filmTile.njk" import filmTile %}

{# Categorize films by type #}
{% set categorizedFilms = collections.films_de | categorizeFilms %}

{# Feature Films Section #}
  {% if categorizedFilms.feature.length > 0 %}
  <section id="features" class="mb-20 scroll-mt-20">
    <h2 class="text-3xl font-bold mb-8 tracking-tight">{{ 'nav.features' | t(locale) }}</h2>
    
    <div class="horizontal-scroll-container overflow-x-auto overflow-y-hidden -mx-6 px-6 pb-6">
      <div class="flex gap-6 w-max">
        {% for film in categorizedFilms.feature %}
        <div class="w-80 flex-shrink-0">
          {% set filmSlug = film.filePathStem.split('/').slice(-2)[0] %}
          {{ filmTile(
            title=film.data.title,
            year=film.data.release_year,
            image=("/assets/films/" + filmSlug + "/" + film.data.poster_image) | url,
            url=film.url | url,
            category="Feature"
          ) }}
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}
  
  {# Documentary Films Section #}
  {% if categorizedFilms.documentary.length > 0 %}
  <section id="documentaries" class="mb-20 scroll-mt-20">
    <h2 class="text-3xl font-bold mb-8 tracking-tight">{{ 'nav.documentaries' | t(locale) }}</h2>
    
    <div class="horizontal-scroll-container overflow-x-auto overflow-y-hidden -mx-6 px-6 pb-6">
      <div class="flex gap-6 w-max">
        {% for film in categorizedFilms.documentary %}
        <div class="w-80 flex-shrink-0">
          {% set filmSlug = film.filePathStem.split('/').slice(-2)[0] %}
          {{ filmTile(
            title=film.data.title,
            year=film.data.release_year,
            image=("/assets/films/" + filmSlug + "/" + film.data.poster_image) | url,
            url=film.url | url,
            category="Documentary"
          ) }}
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  {% endif %}
  
  {# Short Films Section #}
  {% if categorizedFilms.short.length > 0 %}
  <section id="shorts" class="mb-20 scroll-mt-20">
    <h2 class="text-3xl font-bold mb-8 tracking-tight">{{ 'nav.shorts' | t(locale) }}</h2>
    
    <div class="horizontal-scroll-container overflow-x-auto overflow-y-hidden -mx-6 px-6 pb-6">
      <div class="flex gap-6 w-max">
        {% for film in categorizedFilms.short %}
        <div class="w-80 flex-shrink-0">
          {% set filmSlug = film.filePathStem.split('/').slice(-2)[0] %}
          {{ filmTile(
            title=film.data.title,
            year=film.data.release_year,
            image=("/assets/films/" + filmSlug + "/" + film.data.poster_image) | url,
            url=film.url | url,
            category="Short"
          ) }}
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

