{# Language-aware redirect based on browser language #}
<script>
  (function() {
    var userLangs = navigator.languages || [navigator.language || navigator.userLanguage];
    var isGerman = userLangs.some(function(lang) {
      return lang.toLowerCase().startsWith('de');
    });
    var targetUrl = isGerman ? '{{ "/de/" | url }}' : '{{ "/en/" | url }}';
    window.location.href = targetUrl;
  })();
</script>

<noscript>
  <meta http-equiv="refresh" content="0; url={{ '/en/' | url }}">
</noscript>

<main id="main-content" class="container mx-auto max-w-6xl px-6 py-12 text-center">
