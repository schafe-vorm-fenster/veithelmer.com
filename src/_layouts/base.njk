<!DOCTYPE html>
{% set currentLocale = locale or page | getLocale %}
<html lang="{{ currentLocale }}" class="bg-black text-white">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
  {# Primary Meta Tags #}
  <title>{{ title | default("Veit Helmer - Filmmaker") }}</title>
  <meta name="title" content="{{ title | default("Veit Helmer - Filmmaker") }}">
  <meta name="description" content="{{ description | default("Official website of Veit Helmer, award-winning filmmaker known for Tuvalu, Baikonur, and The Bra.") }}">
  <meta name="author" content="Veit Helmer">
  <meta name="keywords" content="{{ keywords | default("Veit Helmer, filmmaker, director, Tuvalu, Baikonur, The Bra, cinema, film") }}">
  
  {# Open Graph / Facebook #}
  <meta property="og:type" content="{{ ogType | default("website") }}">
  <meta property="og:url" content="{{ canonicalUrl | default(site.baseUrl + (page.url | url)) }}">
  <meta property="og:title" content="{{ title | default("Veit Helmer - Filmmaker") }}">
  <meta property="og:description" content="{{ description | default("Official website of Veit Helmer, award-winning filmmaker.") }}">
  {% if ogImage %}<meta property="og:image" content="{{ ogImage }}">{% endif %}
  <meta property="og:locale" content="{{ 'de_DE' if currentLocale == 'de' else 'en_US' }}">
  <meta property="og:site_name" content="Veit Helmer">
  
  {# Twitter Card #}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="{{ canonicalUrl | default(site.baseUrl + (page.url | url)) }}">
  <meta name="twitter:title" content="{{ title | default("Veit Helmer - Filmmaker") }}">
  <meta name="twitter:description" content="{{ description | default("Official website of Veit Helmer, award-winning filmmaker.") }}">
  {% if ogImage %}<meta name="twitter:image" content="{{ ogImage }}">{% endif %}
  
  {# Canonical URL #}
  <link rel="canonical" href="{{ canonicalUrl | default(site.baseUrl + (page.url | url)) }}">
  
  {# hreflang tags for language alternatives #}
  {% set alternateLocale = 'de' if currentLocale == 'en' else 'en' %}
  <link rel="alternate" hreflang="{{ currentLocale }}" href="{{ site.baseUrl }}{{ page.url | url }}">
  <link rel="alternate" hreflang="{{ alternateLocale }}" href="{{ site.baseUrl }}{{ page.url | alternateUrl(alternateLocale) }}">
  <link rel="alternate" hreflang="x-default" href="{{ site.url }}/en/">
  
  {# Stylesheets #}
  <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  
  {# Preload critical assets #}
  <link rel="preload" href="{{ '/assets/fonts/LeagueSpartan-Light.woff2' | url }}" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="{{ '/assets/fonts/LeagueSpartan-Bold.woff2' | url }}" as="font" type="font/woff2" crossorigin>
  
  {# Additional meta tags #}
  <meta name="theme-color" content="#000000">
  <meta name="color-scheme" content="dark">
  
  {# Extra head content from child templates #}
  {% block head %}{% endblock %}
</head>
<body class="antialiased">
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-black">
    Skip to main content
  </a>
  
  <div id="app" class="min-h-screen flex flex-col">
    {{ content | safe }}
  </div>
  
  {# JavaScript #}
  <script type="module" src="{{ '/js/main.js' | url }}"></script>
  
  {# Extra scripts from child templates #}
  {% block scripts %}{% endblock %}
</body>
</html>
