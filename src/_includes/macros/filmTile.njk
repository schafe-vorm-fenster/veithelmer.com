{# 
  Film Tile Component
  Phase 6.2.2: Streaming Service UI Component
  
  @param {string} title - Film title
  @param {string} year - Release year
  @param {string} image - Image URL/path
  @param {string} url - Link to film detail page
  @param {string} [category] - Optional category badge (Feature, Short, etc.)
#}

{% macro filmTile(title, year, image, url, category) %}
<article class="film-tile group relative bg-brand-darkgray transition-all duration-300 ease-out hover:scale-105 hover:z-10">
  <a href="{{ url }}" class="block no-underline" aria-label="View {{ title }} ({{ year }})">
    
    {# 3:2 Aspect Ratio Container #}
    <div class="relative w-full overflow-hidden" style="aspect-ratio: 3/2;">
      
      {# Film Image #}
      <img 
        src="{{ image }}" 
        alt="{{ title }} ({{ year }})"
        class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-105"
        loading="lazy"
      />
      
    </div>
    
    {# Title and Year - Always Visible #}
    <div class="p-4 bg-brand-darkgray">
      <h3 class="text-lg font-bold mb-1 tracking-tight">{{ title }}</h3>
      <p class="text-sm opacity-70">{{ year }}</p>
    </div>
    
  </a>
  
  {# Hover Shadow Effect #}
  <div class="absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300 shadow-2xl"></div>
</article>
{% endmacro %}
