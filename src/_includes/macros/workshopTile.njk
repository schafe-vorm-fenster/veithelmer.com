{# 
  Workshop Tile Component
  Similar to film tile but adapted for workshops
  
  @param {string} title - Workshop title
  @param {string} image - Image URL/path
  @param {string} url - Link to workshop detail page
#}

{% macro workshopTile(title, image, url) %}
<article class="workshop-tile group relative bg-brand-darkgray transition-all duration-300 ease-out hover:scale-105 hover:z-10">
  <a href="{{ url }}" class="block no-underline" aria-label="View {{ title }}">
    
    {# 3:2 Aspect Ratio Container #}
    <div class="relative w-full overflow-hidden" style="aspect-ratio: 3/2;">
      
      {# Workshop Image #}
      <img 
        src="{{ image }}" 
        alt="{{ title }}"
        class="w-full h-full object-cover transition-transform duration-300 ease-out group-hover:scale-105"
        loading="lazy"
      />
      
    </div>
    
    {# Title - Always Visible #}
    <div class="p-4 bg-brand-darkgray">
      <h3 class="text-lg font-bold tracking-tight">{{ title }}</h3>
    </div>
    
  </a>
  
  {# Hover Shadow Effect #}
  <div class="absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300 shadow-2xl"></div>
</article>
{% endmacro %}
